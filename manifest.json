{"manifest_version": 3,
  "name": "GitHub FYP",
  "version": "1.0.0",
  "description": "TikTok-style feed for GitHub repositories based on your interests",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub FYP"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}